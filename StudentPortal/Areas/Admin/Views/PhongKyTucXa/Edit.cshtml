@model StudentPortal.STU_PhongKyTucXa

@{
    ViewBag.Title = "Edit";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
	<div class="span12">
		<!-- BEGIN SAMPLE FORM PORTLET-->
		<div class="portlet box blue">
			<div class="portlet-title">
				<h4><i class="icon-reorder"></i>Edit</h4>
				<div class="tools">
					<a href="javascript:;" class="collapse"></a>
					<a href="#portlet-config" data-toggle="modal" class="config"></a>
					<a href="javascript:;" class="reload"></a>
					<a href="javascript:;" class="remove"></a>
				</div>
			</div>
			<div class="portlet-body form">
				<!-- BEGIN FORM-->
				@using (Html.BeginForm("Edit", "PhongKyTucXa", FormMethod.Post, new { @class = "form-horizontal" }))
	{
					@Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.ID_phong_KTX)

        <div class="control-group">
            @Html.LabelFor(model => model.ID_nha_KTX, "STU_ToaNhaKyTucXa", new { @class = "control-label" })
			<div class="controls">
					@Html.DropDownList("ID_nha_KTX", String.Empty)
					@Html.ValidationMessageFor(model => model.ID_nha_KTX)
			</div>
		</div>
        <div class="control-group">
            @Html.LabelFor(model => model.ID_tang, "PLAN_TANG", new { @class = "control-label" })
			<div class="controls">
					@Html.DropDownList("ID_tang", String.Empty)
					@Html.ValidationMessageFor(model => model.ID_tang)
			</div>
		</div>
        <div class="control-group">
            @Html.LabelFor(model => model.So_phong_KTX, new { @class = "control-label" })
			<div class="controls">
					@Html.TextBoxFor(model => model.So_phong_KTX, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.So_phong_KTX)
			</div>
		</div>
        <div class="control-group">
            @Html.LabelFor(model => model.Suc_chua, new { @class = "control-label" })
			<div class="controls">
					@Html.TextBoxFor(model => model.Suc_chua, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.Suc_chua)
			</div>
		</div>
        <div class="control-group">
            @Html.LabelFor(model => model.Thiet_bi, new { @class = "control-label" })
			<div class="controls">
					@Html.TextBoxFor(model => model.Thiet_bi, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.Thiet_bi)
			</div>
		</div>
        <div class="control-group">
            @Html.LabelFor(model => model.So_tien_mot_nguoi, new { @class = "control-label" })
			<div class="controls">
					@Html.TextBoxFor(model => model.So_tien_mot_nguoi, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.So_tien_mot_nguoi)
			</div>
		</div>
        <div class="control-group">
            @Html.LabelFor(model => model.ID_co_so, "PLAN_COSODAOTAO", new { @class = "control-label" })
			<div class="controls">
					@Html.DropDownList("ID_co_so", String.Empty)
					@Html.ValidationMessageFor(model => model.ID_co_so)
			</div>
		</div>
        <div class="form-actions">
				<button class="btn blue" type="submit">Save</button>
				@Html.ActionLink("Cancel", "Index",new{},new { @class = "btn" })
			</div>
}

		</div>
		</div>
	</div>
</div>
