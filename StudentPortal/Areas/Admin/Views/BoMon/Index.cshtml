@model IEnumerable<StudentPortal.PLAN_BoMon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
					<div class="span12">
                        
						<!-- BEGIN EXAMPLE TABLE PORTLET-->
						<div class="portlet box light-grey">

                            <div style="margin: 5px 0"><a class="btn blue" href="~/Admin/BoMon/Create"><i class="icon-plus"></i> Create new</a></div>
                            
							<div class="portlet-title">
								<h4><i class="icon-reorder"></i>Managed Table</h4>
								<div class="tools">
									<a href="javascript:;" class="collapse"></a>
									<a href="#portlet-config" data-toggle="modal" class="config"></a>
									<a href="javascript:;" class="reload"></a>
									<a href="javascript:;" class="remove"></a>
								</div>
                                 @*@Html.ActionLink("Create New", "Create")*@
							</div>
							<div class="portlet-body">
								<table class="table table-striped table-bordered" id="sample_1">
									<thead>
										<tr>
											<th style="width:8px;"><input type="checkbox" class="group-checkable" data-set="#sample_1 .checkboxes" /></th>
											<th>@Html.DisplayNameFor(model => model.ID_bm)</th>
											<th class="hidden-phone">@Html.DisplayNameFor(model => model.Ma_bo_mon)</th>
											<th class="hidden-phone">@Html.DisplayNameFor(model => model.Bo_mon)</th>
											<th class="hidden-phone">@Html.DisplayNameFor(model => model.So_nhom)</th>
											<th class="hidden-phone"></th>
										</tr>
									</thead>
									<tbody>
                                        @foreach (var item in Model) {
										<tr class="odd gradeX">
											<td><input type="checkbox" class="checkboxes" value="1" /></td>
											<td>@Html.DisplayFor(modelItem => item.ID_bm)</td>
											<td class="hidden-phone">@Html.DisplayFor(modelItem => item.Ma_bo_mon)</td>
											<td class="hidden-phone">@Html.DisplayFor(modelItem => item.Bo_mon)</td>
											<td class="center hidden-phone">@Html.DisplayFor(modelItem => item.So_nhom)</td>
											<td class="hidden-phone"> 
                                                @Html.ActionLink("Edit", "Edit", new {  id=item.ID_bm  }) |
                                                @Html.ActionLink("Details", "Details", new {id=item.ID_bm}) |
                                                @Html.ActionLink("Delete", "Delete", new { id=item.ID_bm })
											</td>
										</tr>
                                        }
									</tbody>
								</table>
							</div>
						</div>
						<!-- END EXAMPLE TABLE PORTLET-->
					</div>
				</div>
