@model StudentPortal.STU_KhenThuong

@{
    ViewBag.Title = "Create";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
	<div class="span12">
		<!-- BEGIN SAMPLE FORM PORTLET-->
		<div class="portlet box blue">
			<div class="portlet-title">
				<h4><i class="icon-reorder"></i>Create</h4>
				<div class="tools">
					<a href="javascript:;" class="collapse"></a>
					<a href="#portlet-config" data-toggle="modal" class="config"></a>
					<a href="javascript:;" class="reload"></a>
					<a href="javascript:;" class="remove"></a>
				</div>
			</div>
			<div class="portlet-body form">
				<!-- BEGIN FORM-->
				@using (Html.BeginForm("Create", "KhenThuong", FormMethod.Post, new { @class = "form-horizontal" }))
	{
					@Html.ValidationSummary(true)

        <div class="control-group">
					@Html.LabelFor(model => model.So_QD, new { @class = "control-label" })
				<div class="controls">
					@Html.TextBoxFor(model => model.So_QD, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.So_QD)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.Ngay_QD, new { @class = "control-label" })
				<div class="controls">
					@Html.TextBoxFor(model => model.Ngay_QD, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.Ngay_QD)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.Hoc_ky, new { @class = "control-label" })
				<div class="controls">
					@Html.TextBoxFor(model => model.Hoc_ky, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.Hoc_ky)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.Nam_hoc, new { @class = "control-label" })
				<div class="controls">
					@Html.TextBoxFor(model => model.Nam_hoc, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.Nam_hoc)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.ID_loai_kt, "STU_LoaiKhenThuong", new { @class = "control-label" })
				<div class="controls">
					@Html.DropDownList("ID_loai_kt", String.Empty)
					@Html.ValidationMessageFor(model => model.ID_loai_kt)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.Hinh_thuc, new { @class = "control-label" })
				<div class="controls">
					@Html.TextBoxFor(model => model.Hinh_thuc, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.Hinh_thuc)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.ID_cap, "STU_CapKhenThuongKyLuat", new { @class = "control-label" })
				<div class="controls">
					@Html.DropDownList("ID_cap", String.Empty)
					@Html.ValidationMessageFor(model => model.ID_cap)
			</div>
		</div>
			<div class="form-actions">
				<button class="btn blue" type="submit">Create</button>
				<button class="btn" type="button">Cancel</button>
			</div>
}

			</div>
		</div>
	</div>
</div>
