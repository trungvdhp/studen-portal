@model IEnumerable<StudentPortal.STU_HoatDongXaHoi>

@{
    ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
	<div class="span12">

		<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@(Html.Kendo().Grid<StudentPortal.STU_HoatDongXaHoi>()
	.Name("STU_HoatDongXaHoi")
	.Columns(columns =>
	{
			columns.Bound(model => model.STU_HoSoSinhVien.Ma_sv);
				columns.Bound(model => model.Hoc_ky);
				columns.Bound(model => model.Nam_hoc);
				columns.Bound(model => model.Ngay_thang);
				columns.Bound(model => model.Noi_dung);
				columns.Bound(model => model.Ket_qua);
				columns.Bound(model => model.Diem_thuong);
		        columns.Command(command => {command.Custom("Edit").Click("Edit"); command.Custom("Delete").Click("Delete");});
	})
	.Groupable()
	.Pageable()
	.Sortable()
	.DataSource(
		dataSource => dataSource.Ajax()
			.Read(read => read.Action("Read", "HoatDongXaHoi"))
	)
)

	</div>
</div>
<script type="text/javascript">
	function Edit(e) {
		e.preventDefault();
		var dataItem = this.dataItem($(e.currentTarget).closest('tr'));
		location.href='@Url.Action("Edit","HoatDongXaHoi")/'+dataItem.ID_hd_xh;
	}
	function Delete(e) {
		e.preventDefault();
		var dataItem = this.dataItem($(e.currentTarget).closest('tr'));
		location.href = '@Url.Action("Delete","HoatDongXaHoi")/' + dataItem.ID_hd_xh;
	}
</script>
