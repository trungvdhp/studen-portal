@model IEnumerable<StudentPortal.STU_He>

@{
    ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
	<div class="span12">

		<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@(Html.Kendo().Grid<StudentPortal.STU_He>()
	.Name("STU_He")
	.Columns(columns =>
	{
			columns.Bound(model => model.Ma_he);
				columns.Bound(model => model.Ten_he);
				columns.Bound(model => model.Quy_che);
				columns.Bound(model => model.Ten_he_en);
				columns.Bound(model => model.Ten_bac_hoc);
				columns.Bound(model => model.Loai_dao_tao);
				columns.Bound(model => model.Loai_dao_tao_en);
		        columns.Command(command => {command.Custom("Edit").Click("Edit"); command.Custom("Delete").Click("Delete");});
	})
	.Groupable()
	.Pageable()
	.Sortable()
	.DataSource(
		dataSource => dataSource.Ajax()
			.Read(read => read.Action("Read", "He"))
	)
)

	</div>
</div>
<script type="text/javascript">
	function Edit(e) {
		e.preventDefault();
		var dataItem = this.dataItem($(e.currentTarget).closest('tr'));
		location.href='@Url.Action("Edit","He")/'+dataItem.ID_he;
	}
	function Delete(e) {
		e.preventDefault();
		var dataItem = this.dataItem($(e.currentTarget).closest('tr'));
		location.href = '@Url.Action("Delete","He")/' + dataItem.ID_he;
	}
</script>
