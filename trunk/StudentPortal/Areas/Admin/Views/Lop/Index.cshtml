@model IEnumerable<StudentPortal.STU_Lop>

@{
    ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
	<div class="span12">

		<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@(Html.Kendo().Grid<StudentPortal.STU_Lop>()
	.Name("STU_Lop")
	.Columns(columns =>
	{
			columns.Bound(model => model.Ten_lop);
				columns.Bound(model => model.STU_He.Ma_he);
				columns.Bound(model => model.STU_Khoa.Ma_khoa);
				columns.Bound(model => model.STU_ChuyenNganh.Ma_chuyen_nganh);
				columns.Bound(model => model.Khoa_hoc);
				columns.Bound(model => model.Nien_khoa);
				columns.Bound(model => model.STU_DoiTuong.Ma_dt);
				columns.Bound(model => model.So_sv);
				columns.Bound(model => model.Ra_truong);
				columns.Bound(model => model.Ca_hoc);
				columns.Bound(model => model.PLAN_PhongHoc.So_phong);
				columns.Bound(model => model.Ho_ten_gv);
				columns.Bound(model => model.Dien_thoai);
				columns.Bound(model => model.Email);
				columns.Bound(model => model.Tinh_chat);
				columns.Bound(model => model.Lop_chuyen_nganh);
				columns.Bound(model => model.Lop_hanh_chinh);
		        columns.Command(command => {command.Custom("Edit").Click("Edit"); command.Custom("Delete").Click("Delete");});
	})
	.Groupable()
	.Pageable()
	.Sortable()
	.DataSource(
		dataSource => dataSource.Ajax()
			.Read(read => read.Action("Read", "Lop"))
	)
)

	</div>
</div>
<script type="text/javascript">
	function Edit(e) {
		e.preventDefault();
		var dataItem = this.dataItem($(e.currentTarget).closest('tr'));
		location.href='@Url.Action("Edit","Lop")/'+dataItem.ID_lop;
	}
	function Delete(e) {
		e.preventDefault();
		var dataItem = this.dataItem($(e.currentTarget).closest('tr'));
		location.href = '@Url.Action("Delete","Lop")/' + dataItem.ID_lop;
	}
</script>
