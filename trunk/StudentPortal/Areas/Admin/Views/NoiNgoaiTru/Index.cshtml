@model IEnumerable<StudentPortal.STU_NoiNgoaiTru>

@{
    ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
	<div class="span12">

		<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@(Html.Kendo().Grid<StudentPortal.STU_NoiNgoaiTru>()
	.Name("STU_NoiNgoaiTru")
	.Columns(columns =>
	{
			columns.Bound(model => model.Tu_ngay);
				columns.Bound(model => model.Den_ngay);
				columns.Bound(model => model.STU_PhongKyTucXa.So_phong_KTX);
				columns.Bound(model => model.Dia_chi);
				columns.Bound(model => model.Dien_thoai);
				columns.Bound(model => model.Ten_chu_ho);
				columns.Bound(model => model.Ghi_chu);
				columns.Bound(model => model.Trang_thai);
				columns.Bound(model => model.STU_Phuong.Ten_phuong);
		        columns.Command(command => {command.Custom("Edit").Click("Edit"); command.Custom("Delete").Click("Delete");});
	})
	.Groupable()
	.Pageable()
	.Sortable()
	.DataSource(
		dataSource => dataSource.Ajax()
			.Read(read => read.Action("Read", "NoiNgoaiTru"))
	)
)

	</div>
</div>
<script type="text/javascript">
	function Edit(e) {
		e.preventDefault();
		var dataItem = this.dataItem($(e.currentTarget).closest('tr'));
		location.href='@Url.Action("Edit","NoiNgoaiTru")/'+dataItem.ID_sv;
	}
	function Delete(e) {
		e.preventDefault();
		var dataItem = this.dataItem($(e.currentTarget).closest('tr'));
		location.href = '@Url.Action("Delete","NoiNgoaiTru")/' + dataItem.ID_sv;
	}
</script>
