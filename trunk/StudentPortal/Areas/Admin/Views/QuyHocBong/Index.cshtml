@model IEnumerable<StudentPortal.STU_QuyHocBong>

@{
    ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
	<div class="span12">

		<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@(Html.Kendo().Grid<StudentPortal.STU_QuyHocBong>()
	.Name("STU_QuyHocBong")
	.Columns(columns =>
	{
			columns.Bound(model => model.ID_quy);
				columns.Bound(model => model.STU_He.Ma_he);
				columns.Bound(model => model.Hoc_ky);
				columns.Bound(model => model.Nam_hoc);
				columns.Bound(model => model.Tu_khoa);
				columns.Bound(model => model.Den_khoa);
				columns.Bound(model => model.Sotien_ngansach);
				columns.Bound(model => model.Sotien_khac);
				columns.Bound(model => model.Ghi_chu);
		        columns.Command(command => {command.Custom("Edit").Click("Edit"); command.Custom("Delete").Click("Delete");});
	})
	.Groupable()
	.Pageable()
	.Sortable()
	.DataSource(
		dataSource => dataSource.Ajax()
			.Read(read => read.Action("Read", "QuyHocBong"))
	)
)

	</div>
</div>
<script type="text/javascript">
	function Edit(e) {
		e.preventDefault();
		var dataItem = this.dataItem($(e.currentTarget).closest('tr'));
		location.href='@Url.Action("Edit","QuyHocBong")/'+dataItem.ID_hb;
	}
	function Delete(e) {
		e.preventDefault();
		var dataItem = this.dataItem($(e.currentTarget).closest('tr'));
		location.href = '@Url.Action("Delete","QuyHocBong")/' + dataItem.ID_hb;
	}
</script>
