@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update</h2>
@{
    ViewBag.Title = "Quản lý tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/themes/assets/bootstrap-wysihtml5/bootstrap-wysihtml5.css" />
<script type="text/javascript" src="~/Content/themes/assets/bootstrap-wysihtml5/wysihtml5-0.3.0.js"></script>
<script type="text/javascript" src="~/Content/themes/assets/bootstrap-wysihtml5/bootstrap-wysihtml5.js"></script>
 
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <h4>Tin mới</h4>
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal" id="frmUpdateNews" action="@Url.Action("Update", "News", new { Area = "Admin"})">
                    <input type="hidden"" name="Id" />
                    <div class="control-group">
                        <label class="control-label">Tiêu đề</label>
                        <div class="controls">
                            <input type="text" class="span12" name="Title"/>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Mô tả</label>
                        <div class="controls">
                            <textarea class="span12" name="Description"></textarea>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Nội dung</label>
                        <div class="controls">
                            <textarea class="span12 wysihtml5 m-wrap" name="Contents" rows="10"></textarea>
                        </div>
                    </div>
                    <div class="form-actions">
                        <button class="btn blue" type="submit">Gửi</button> &nbsp;
                        @Html.ActionLink("Hủy bỏ", "Index", "News", new { Area = "Admin" }, new { @class="btn"})
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/jquery.formParse.js")"></script>
<script>
    $(document).ready(function () {
        $('#frmUpdateNews').formParse({
            data: @ViewBag.News ,
            ajax: true,
        });
    });
</script>