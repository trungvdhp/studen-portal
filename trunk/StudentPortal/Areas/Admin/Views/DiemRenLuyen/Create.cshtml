@model StudentPortal.STU_DiemRenLuyen

@{
    ViewBag.Title = "Create";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
	<div class="span12">
		<!-- BEGIN SAMPLE FORM PORTLET-->
		<div class="portlet box blue">
			<div class="portlet-title">
				<h4><i class="icon-reorder"></i>Create</h4>
				<div class="tools">
					<a href="javascript:;" class="collapse"></a>
					<a href="#portlet-config" data-toggle="modal" class="config"></a>
					<a href="javascript:;" class="reload"></a>
					<a href="javascript:;" class="remove"></a>
				</div>
			</div>
			<div class="portlet-body form">
				<!-- BEGIN FORM-->
				@using (Html.BeginForm("Create", "DiemRenLuyen", FormMethod.Post, new { @class = "form-horizontal" }))
	{
					@Html.ValidationSummary(true)

        <div class="control-group">
					@Html.LabelFor(model => model.Hoc_ky, new { @class = "control-label" })
				<div class="controls">
					@Html.TextBoxFor(model => model.Hoc_ky, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.Hoc_ky)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.Nam_hoc, new { @class = "control-label" })
				<div class="controls">
					@Html.TextBoxFor(model => model.Nam_hoc, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.Nam_hoc)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.ID_sv, "STU_HoSoSinhVien", new { @class = "control-label" })
				<div class="controls">
					@Html.DropDownList("ID_sv", String.Empty)
					@Html.ValidationMessageFor(model => model.ID_sv)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.ID_loai_rl, "STU_LoaiRenLuyen", new { @class = "control-label" })
				<div class="controls">
					@Html.DropDownList("ID_loai_rl", String.Empty)
					@Html.ValidationMessageFor(model => model.ID_loai_rl)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.Diem, new { @class = "control-label" })
				<div class="controls">
					@Html.TextBoxFor(model => model.Diem, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.Diem)
			</div>
		</div>
			<div class="form-actions">
				<button class="btn blue" type="submit">Create</button>
				<button class="btn" type="button">Cancel</button>
			</div>
}

			</div>
		</div>
	</div>
</div>
