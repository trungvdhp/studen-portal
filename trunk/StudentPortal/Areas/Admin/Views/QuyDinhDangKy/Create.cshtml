@model StudentPortal.PLAN_QUYDINH_DANGKY

@{
    ViewBag.Title = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
	<div class="span12">
		<!-- BEGIN SAMPLE FORM PORTLET-->
		<div class="portlet box blue">
			<div class="portlet-title">
				<h4><i class="icon-reorder"></i>Create</h4>
				<div class="tools">
					<a href="javascript:;" class="collapse"></a>
					<a href="#portlet-config" data-toggle="modal" class="config"></a>
					<a href="javascript:;" class="reload"></a>
					<a href="javascript:;" class="remove"></a>
				</div>
			</div>
			<div class="portlet-body form">
				<!-- BEGIN FORM-->
				@using (Html.BeginForm("Create", "QuyDinhDangKy", FormMethod.Post, new { @class = "form-horizontal" }))
	{
					@Html.ValidationSummary(true)

        <div class="control-group">
					@Html.LabelFor(model => model.Tu_ngay, new { @class = "control-label" })
				<div class="controls">
					@Html.TextBoxFor(model => model.Tu_ngay, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.Tu_ngay)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.Den_ngay, new { @class = "control-label" })
				<div class="controls">
					@Html.TextBoxFor(model => model.Den_ngay, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.Den_ngay)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.Hoc_ky, new { @class = "control-label" })
				<div class="controls">
					@Html.TextBoxFor(model => model.Hoc_ky, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.Hoc_ky)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.Nam_hoc, new { @class = "control-label" })
				<div class="controls">
					@Html.TextBoxFor(model => model.Nam_hoc, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.Nam_hoc)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.Chon_dang_ky, new { @class = "control-label" })
				<div class="controls">
					@Html.TextBoxFor(model => model.Chon_dang_ky, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.Chon_dang_ky)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.ID_he, "Hệ ĐT", new { @class = "control-label" })
				<div class="controls">
					@Html.DropDownList("ID_he", String.Empty)
					@Html.ValidationMessageFor(model => model.ID_he)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.ID_Chuyen_nganh, "Chuyên ngành", new { @class = "control-label" })
				<div class="controls">
					@Html.DropDownList("ID_Chuyen_nganh", String.Empty)
					@Html.ValidationMessageFor(model => model.ID_Chuyen_nganh)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.Ky_dang_ky, "Kỳ đăng ký", new { @class = "control-label" })
				<div class="controls">
					@Html.DropDownList("Ky_dang_ky", String.Empty)
					@Html.ValidationMessageFor(model => model.Ky_dang_ky)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.Khoa_hoc, new { @class = "control-label" })
				<div class="controls">
					@Html.TextBoxFor(model => model.Khoa_hoc, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.Khoa_hoc)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.Type, new { @class = "control-label" })
				<div class="controls">
					@Html.TextBoxFor(model => model.Type, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.Type)
			</div>
		</div>
			<div class="form-actions">
				<button class="btn blue" type="submit">Xác nhận</button>
				@Html.ActionLink("Hủy bỏ", "Index", new { }, new { @class="btn" })
			</div>
}

			</div>
		</div>
	</div>
</div>
