@model StudentPortal.Models.UserProfile

@{
    ViewBag.Title = "Create";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
	<div class="span12">
		<!-- BEGIN SAMPLE FORM PORTLET-->
		<div class="portlet box blue">
			<div class="portlet-title">
				<h4><i class="icon-reorder"></i>Create</h4>
				<div class="tools">
					<a href="javascript:;" class="collapse"></a>
					<a href="#portlet-config" data-toggle="modal" class="config"></a>
					<a href="javascript:;" class="reload"></a>
					<a href="javascript:;" class="remove"></a>
				</div>
			</div>
			<div class="portlet-body form">
				<!-- BEGIN FORM-->
				@using (Html.BeginForm("Create", "User", FormMethod.Post, new { @class = "form-horizontal" }))
	{
					@Html.ValidationSummary(true)

        <div class="control-group">
					@Html.LabelFor(model => model.UserName, new { @class = "control-label" })
				<div class="controls">
					@Html.TextBoxFor(model => model.UserName, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.UserName)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.GroupId, "webpages_Group", new { @class = "control-label" })
				<div class="controls">
					@Html.DropDownList("GroupId", String.Empty)
					@Html.ValidationMessageFor(model => model.GroupId)
			</div>
		</div>
			<div class="form-actions">
				<button class="btn blue" type="submit">Create</button>
				<button class="btn" type="button">Cancel</button>
			</div>
}

			</div>
		</div>
	</div>
</div>
