					@Html.TextBoxFor(model => model.Trang_thai, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.Trang_thai)
			</div>
		</div>
			<div class="form-actions">
				<button class="btn blue" type="submit">Create</button>
				<button class="btn" type="button">Cancel</button>
			</div>
}

			</div>
		</div>
	</div>
</div>
