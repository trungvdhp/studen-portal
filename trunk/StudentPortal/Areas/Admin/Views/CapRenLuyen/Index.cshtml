@model IEnumerable<StudentPortal.STU_CapRenLuyen>

@{
    ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
	<div class="span12">

		<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@(Html.Kendo().Grid<StudentPortal.STU_CapRenLuyen>()
	.Name("STU_CapRenLuyen")
	.Columns(columns =>
	{
			columns.Bound(model => model.Ky_hieu);
				columns.Bound(model => model.Ten_cap);
				columns.Bound(model => model.Diem);
		        columns.Command(command => {command.Custom("Edit").Click("Edit"); command.Custom("Delete").Click("Delete");});
	})
	.Groupable()
	.Pageable()
	.Sortable()
	.DataSource(
		dataSource => dataSource.Ajax()
			.Read(read => read.Action("Read", "CapRenLuyen"))
	)
)

	</div>
</div>
<script type="text/javascript">
	function Edit(e) {
		e.preventDefault();
		var dataItem = this.dataItem($(e.currentTarget).closest('tr'));
		location.href='@Url.Action("Edit","CapRenLuyen")/'+dataItem.ID_cap_rl;
	}
	function Delete(e) {
		e.preventDefault();
		var dataItem = this.dataItem($(e.currentTarget).closest('tr'));
		location.href = '@Url.Action("Delete","CapRenLuyen")/' + dataItem.ID_cap_rl;
	}
</script>
