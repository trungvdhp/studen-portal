@model StudentPortal.STU_DanhHieu

@{
    ViewBag.Title = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
	<div class="span12">
		<!-- BEGIN SAMPLE FORM PORTLET-->
		<div class="portlet box blue">
			<div class="portlet-title">
				<h4><i class="icon-reorder"></i>Create</h4>
				<div class="tools">
					<a href="javascript:;" class="collapse"></a>
					<a href="#portlet-config" data-toggle="modal" class="config"></a>
					<a href="javascript:;" class="reload"></a>
					<a href="javascript:;" class="remove"></a>
				</div>
			</div>
			<div class="portlet-body form">
				<!-- BEGIN FORM-->
				@using (Html.BeginForm("Create", "DanhHieu", FormMethod.Post, new { @class = "form-horizontal" }))
	{
					@Html.ValidationSummary(true)

        <div class="control-group">
					@Html.LabelFor(model => model.Danh_hieu, new { @class = "control-label" })
				<div class="controls">
					@Html.TextBoxFor(model => model.Danh_hieu, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.Danh_hieu)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.Tu_diem, new { @class = "control-label" })
				<div class="controls">
					@Html.TextBoxFor(model => model.Tu_diem, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.Tu_diem)
			</div>
		</div>
        <div class="control-group">
					@Html.LabelFor(model => model.Den_diem, new { @class = "control-label" })
				<div class="controls">
					@Html.TextBoxFor(model => model.Den_diem, new { @class = "medium m-wrap" })
					@Html.ValidationMessageFor(model => model.Den_diem)
			</div>
		</div>
			<div class="form-actions">
				<button class="btn blue" type="submit">Xác nhận</button>
				@Html.ActionLink("Hủy bỏ", "Index", new { }, new { @class="btn" })
			</div>
}

			</div>
		</div>
	</div>
</div>
